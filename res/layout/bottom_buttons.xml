<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    
    
    <ImageView 
        android:id="@+id/buttom_buttons_button1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/grid_m" 
        android:layout_weight="1"
	/>
    
    <Button 
        android:id="@+id/button_buttons_button2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/home_m"
          android:background="#00000000"
        android:text="首页"
        android:textColor="@color/white" />
    
    
     <Button 
        android:id="@+id/button_buttons_button3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
          android:background="#00000000"
        android:layout_weight="1"
        android:drawableTop="@drawable/mysale_m"
        android:text="我的账户"
        android:textColor="@color/white"/>
     
     
     <Button 
        android:id="@+id/button_buttons_button4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/shopcar_m"
          android:background="#00000000"
        android:text="购物车"
        android:textColor="@color/white" />

     
     <Button 
        android:id="@+id/button_buttons_button5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/more_m"
        android:background="#00000000"
        android:text="更多"
        android:textColor="@color/white" />

</LinearLayout>